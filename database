CREATE TABLE Customer (
        CustomerID int NOT NULL,
        firstName varchar(50) NOT NULL,
        lastName varchar(50) NOT NULL,
        phoneNumber varchar(50) NOT NULL,
        Email varchar(50) NOT NULL,
        password varchar(50) NOT NULL,
        PRIMARY KEY (CustomerID)
        );

CREATE TABLE Admin (
        adminID int NOT NULL,
        firstName varchar(50) NOT NULL,
        lastName varchar(50) NOT NULL,
        phoneNumber varchar(50) NOT NULL,
        Email varchar(50) NOT NULL,
        password varchar(50) NOT NULL,
        PRIMARY KEY (adminID)
        );

insert into Admin values(1 , 'momen' , 'mostafa' , '01119738864' , 'momenmostafa585@gmail.com' ,'12345') ;


CREATE TABLE Train (
        trainID int NOT NULL,
        trainName varchar(50) NOT NULL,
        trainNumber int NOT NULL,
        adminID int,
		numberOfSeats int ,
        PRIMARY KEY (trainID),
        FOREIGN KEY (adminID) REFERENCES Admin(adminID) ON DELETE set null
);

insert into Train values (1 , 'masr eskendria', 1905 , 1) ;

CREATE TABLE Trip (
        tripID int NOT NULL,
        trainID int NOT NULL,
        originStation varchar(50) NOT NULL,
        destinationStation varchar(50) NOT NULL,
        DepartureDate varchar(50) NOT NULL,
        DepratureTime varchar(50) NOT NULL,
        arrivialTime varchar(50) NOT NULL,
        availableSeats int NOT NULL,
        adminID int ,

        PRIMARY KEY (tripID),

        FOREIGN KEY (trainID) REFERENCES Train(trainID) ON DELETE CASCADE,
        FOREIGN KEY (adminID) REFERENCES Admin(adminID) ON DELETE set null
        
		);

insert into Trip values(1 , 1 , 'cairo' , 'alexandria' , '23/5/2023' , '5.20 pm' ,'7.35 pm' , 30 ,1)

        CREATE TABLE Booking (
        BookingID int NOT NULL,
        CustomerID int NOT NULL,
        tripID int NOT NULL,
        bookingData varchar(50) NOT NULL,
        PRIMARY KEY (BookingID),
        FOREIGN KEY (CustomerID) REFERENCES Customer(CustomerID) ON DELETE CASCADE,
        FOREIGN KEY (tripID) REFERENCES Trip(tripID) ON DELETE CASCADE
        );

        CREATE TABLE BookingDetails (
        BookingID int NOT NULL,
        seatNumber int NOT NULL,
        FOREIGN KEY (BookingID) REFERENCES Booking(BookingID) ON DELETE CASCADE
        );


        CREATE TABLE Cancellation (
        CancellationID int NOT NULL,
        BookingID int NOT NULL,
        CancellationDate varchar(10) NOT NULL,
        PRIMARY KEY (CancellationID)
        );
